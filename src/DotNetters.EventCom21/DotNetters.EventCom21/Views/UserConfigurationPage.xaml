<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="DotNetters.EventCom21.Views.UserConfigurationPage">


    <Grid Margin="5" Grid.Row="0" Grid.Column="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Text="¿Qué nombre de usuario (nick name) quieres usar?" />
        <Entry Grid.Row="1" Grid.Column="0" Text="{Binding UserName}"/>
    </Grid>
    
</ContentPage>